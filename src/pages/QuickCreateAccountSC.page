<apex:page standardController="Account">
<apex:pageBlock >
<apex:pageBlockSection columns="2" title="Create">
<apex:pageBlockSectionItem >
<apex:form >
    <apex:outputLabel value="Name" for="AName"/>
    <apex:inputfield value="{!Account.name }" id="AName"/>
    <apex:outputLabel value="Account Number" for="ANumber"/><br/>
    <apex:inputfield value="{!Account.AccountNumber }" id="ANumber"/><br/>
    <apex:commandButton action="{! save }" value="Save"/>


</apex:form>

</apex:pageBlockSectionItem>
</apex:pageBlockSection>
</apex:pageBlock>
  
</apex:page>